
@{
    ViewBag.Title = "View";
}

<h2>chat</h2>

<style>
    .main {
        height: 100%;
    }

    .chat-container {
        height: calc(100vh - 56px);
    }

    .chat-messages {
        height: calc(100% - 70px);
        overflow-y: auto;
    }

    .user-message {
        background-color: #f0f0f0;
    }

    .bot-message {
        background-color: #e6f3ff;
    }
</style>
<div class="main">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">ChatGPT-like</a>
        </div>
    </nav>

    <div class="container-fluid chat-container">
        <div class="row h-100">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">
                                New Chat
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main chat area -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="chat-messages p-3">
                    <div class="bot-message mb-3 p-3 rounded">
                        <strong>ChatGPT:</strong> Hello! How can I assist you today?
                    </div>
                    <div class="user-message mb-3 p-3 rounded">
                        <strong>You:</strong> Can you explain what HTML is?
                    </div>
                </div>
                <div class="chat-input mt-3">
                    @Html.BeginForm("SendMessage", "GPT", FormMethod.Post){
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Type your message here..." aria-label="User's message">
                        <button class="btn btn-primary" type="submit">Send</button>
                    </div>
                    }
                    
                </div>
            </main>
        </div>
    </div>
</div>